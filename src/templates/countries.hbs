{{#each this}}

<div>
    <h1>{{name}}</h1>
    <h2>Capital:{{capital}}</h2>
    <h2>Population:{{population}}</h2>
    <h2>Language:</h2>
    <ul class="tag-list">
        {{#each language}}
        <li>{{[]}}</li>
        {{/each}}
    </ul>
    <img src="{{flag}}" alt="{{flag}}" />
</div>

{{/each}}